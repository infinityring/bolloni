
{{#currentBolloneEnrich @root.bolloni  @root.history}}
<div id="currentBollone" currentId="{{currentBollone.id}}" class="col-xs-4 col-sm-2 placeholder">
  <img src="/pu/images/{{bollone.img}}" width="300" height="300" class="img-responsive" alt="Generic placeholder thumbnail">
</div>
<div id="{{id}}" class="col-xs-8 col-sm-10 placeholder bollone">
  <h4>{{bollone.desc}}</h4>
  <span class="text-muted">{{bollone.category.desc}}</span>
  <span class="text-muted">
    {{#if currentBollone.end}}
      ({{currentBollone.duration}})
    {{else}}
      ({{calculatedDuration}})
    {{/if}}
    </span>
</div>
{{/currentBolloneEnrich}}
